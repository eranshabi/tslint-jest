{
  "name": "tslint-jest",
  "version": "1.0.4",
  "description": "",
  "main": "tslint-jest.json",
  "scripts": {
    "test": "jest",
    "build": "rm -rf dist && tsc",
    "publish": "npm run build && tsc && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eranshabi/tslint-jest.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/eranshabi/tslint-jest/issues"
  },
  "homepage": "https://github.com/eranshabi/tslint-jest#readme",
  "files": [
    "dist/src/rules"
  ],
  "dependencies": {
    "tslint": "^5.9.1"
  },
  "devDependencies": {
    "@types/jest": "^22.0.1",
    "jest": "^22.1.4",
    "ts-jest": "^22.0.1",
    "typescript": "^2.6.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testURL": "http://localhost/",
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/**/*.spec.(ts|tsx)"
    ]
  }
